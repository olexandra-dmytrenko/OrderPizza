<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--<context: annotation-config/>-->

    <!-- используем, когда экземпляры объекта через фектори создаются-->
    <!--вставить в мапу, fix-->

    <bean name="pizzaFactoryBean" class="infrastructure.PizzaFactoryBean">
        <property name="name" value="Sea"/>
        <property name="id" value="1"/>
    </bean>
    <!--&lt;!&ndash; for our Benchmark which has to be added and work Может использоваться как логгер, когда какой бин был создан&ndash;&gt;-->
    <bean class="infrastructure.BenchMarkBeanPostProcessor"/>
    <bean id="pizzaRepo" class="repository.InMemPizzaRepository"
          init-method="init">
        <property name="pizzas">
            <map>
                <entry key="1">
                    <bean class="domain.Pizza">
                        <constructor-arg type="java.lang.String" value="Sea"/>
                        <constructor-arg type="int" value="1"/>
                    </bean>
                </entry>
                <entry key="2">
                    <bean class="domain.Pizza">
                        <constructor-arg type="java.lang.String" value="Meat"/>
                        <constructor-arg type="int" value="2"/>
                    </bean>
                </entry>
                <entry key="3">
                    <bean class="domain.Pizza">
                        <constructor-arg type="java.lang.String" value="Tropic"/>
                        <constructor-arg type="int" value="3"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="customerService" class="service.SimpleCustomerService"/>
    <!-- method - the one we call to get new instance of Customer-->
    <bean id="pizzaService" class="service.SimplePizzaService">
        <constructor-arg ref="pizzaRepo"/>
    </bean>

    <bean id="order1" class="domain.Order" scope="prototype">
        <constructor-arg ref="newCustomer"/>
        <constructor-arg>
            <list>
                <ref bean="pizza1"/>
                <ref bean="pizza2"/>
            </list>
        </constructor-arg>
    </bean>

